#version 330 core
out vec4 FragColor;

in vec2 TexCoord;
in vec3 ourColor;

// texture samplers
uniform sampler2D texture1;
uniform sampler2D texture2;

void main()
{
	if (TexCoord.x != 0.0 || TexCoord.y != 0.0){
		FragColor = mix(vec4(ourColor, 0.2) , texture(texture1, TexCoord), 0.2);
	}	
	else{
		FragColor = vec4(ourColor,	1.0);
	}
}